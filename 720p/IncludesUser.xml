				<onclick condition="System.AddonIsEnabled(script.skin.utils)">RunScript(script.skin.utils,action=setresourceaddon,skinstring=$PARAM[property],addontype=$PARAM[type],header=$PARAM[label])</onclick>											
				<enable>$PARAM[enable]</enable>
			</control>
